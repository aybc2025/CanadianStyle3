rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Puzzles collection - public read for active puzzles, admin write
    match /puzzles/{puzzleId} {
      // Anyone can read active puzzles
      allow read: if resource.data.status == 'active';
      
      // Only authenticated admins can write
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Groups collection - public read, admin write
    match /groups/{groupId} {
      allow read: if true;
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Words collection - public read, admin write
    match /words/{wordId} {
      allow read: if true;
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Sessions collection - created by functions, read by owner
    match /sessions/{sessionId} {
      // Sessions are managed by server-side functions
      // No direct client access - all through Netlify functions
      allow read, write: if false;
    }
    
    // Admins collection - only readable by the admin themselves
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only set up manually or via admin SDK
    }
  }
}
